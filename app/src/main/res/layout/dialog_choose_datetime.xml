<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/white">

    <TextView
        android:padding="20dp"
        android:text="@string/choose_delivery_date"
        android:fontFamily="sans-serif-condensed"
        android:textColor="@color/text"
        android:textAppearance="?android:textAppearanceMedium"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:orientation="vertical"
        android:padding="20dp"
        android:layout_marginBottom="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Spinner
            android:padding="10dp"
            android:id="@+id/dates_spinner"
            android:layout_weight="1"
            android:layout_marginBottom="15dp"
            android:entries="@array/dates_array"
            android:background="@drawable/spinner_bg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <Spinner
            android:padding="10dp"
            android:layout_weight="1"
            android:id="@+id/hours_spinner"
            android:entries="@array/hours_array"
            android:background="@drawable/spinner_bg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <LinearLayout
        android:padding="20dp"
        android:background="@color/grey"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/button_save_order_datetime"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/green_button_selector"
            android:textColor="@color/white"
            android:textSize="13dp"
            style="?android:attr/borderlessButtonStyle"
            android:text="@string/acept"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

    </LinearLayout>

</LinearLayout>


