<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/white">

    <LinearLayout
        android:padding="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/item_detail_img"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_gravity="center"
            android:paddingBottom="20dp"
             />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_marginBottom="30dp"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/item_detail_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16dp"
                android:textColor="@color/grey3"
                />

            <TextView
                android:id="@+id/item_detail_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:textColor="@color/grey4"
                />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:background="@color/grey"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_weight="9"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/item_detail_button_minus"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:text="-"
                android:background="@drawable/border_025_no_radius"
                android:textColor="@color/grey3"
                android:textSize="13dp"
                android:gravity="center"
                style="?android:attr/borderlessButtonStyle"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <TextView
                android:id="@+id/item_detail_amount"
                android:inputType="number"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:padding="10dp"
                android:text="1"
                android:layout_alignTop="@+id/item_detail_button_minus"
                android:layout_toRightOf="@+id/item_detail_button_minus"
                android:layout_toEndOf="@+id/item_detail_button_minus" />

            <Button
                android:id="@+id/item_detail_button_plus"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:text="+"
                android:layout_alignParentBottom="true"
                android:background="@drawable/border_025_no_radius"
                android:textColor="@color/grey3"
                android:textSize="13dp"
                android:gravity="center"
                style="?android:attr/borderlessButtonStyle"
                android:layout_toRightOf="@+id/item_detail_amount"
                android:layout_toEndOf="@+id/item_detail_amount" />
        </LinearLayout>

        <Button
            android:layout_weight="1"
            android:id="@+id/item_detail_button_add_cart"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:background="@drawable/green_button_selector"
            android:textColor="@color/white"
            android:textSize="13dp"
            android:layout_marginLeft="20dp"
            style="?android:attr/borderlessButtonStyle"
            android:text="@string/add"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

    </LinearLayout>

</LinearLayout>


